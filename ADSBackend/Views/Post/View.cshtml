@{

}
@model ADSBackend.Models.Post

    <div>
        <div class="wrapper wrapper-content white-bg fadeInDown">
            <div class="ibox">
                <div class="ibox-title">
                    <div>
                        <h2>@Model.Title</h2>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-3">
                            <figure>
                                <iframe width="400" height="225" src=@Model.Link frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; picture-in-picture"
                                        allowfullscreen="true"></iframe>
                            </figure>
                        </div>
                        <div class="col-lg-3 col-lg-offset-1">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
